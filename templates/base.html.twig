<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% block stylesheets %}{% endblock %}

    </head>
    <body>
    <header>
    {% block header %}
        <div class="header_logo">
            <a href="{{ path('homepage') }}">SimplePortal</a>
        </div>
        <nav>
            <ul>
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin_page') }}"class="text_white">Админ</a></li>
                {%endif %}
                <li><a href="{{ path('homepage') }}" class="text_white">Главная</a></li>
                <li><a href="{{ path('posts') }}"class="text_white">Посмотреть посты</a></li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') and not is_granted('ROLE_BANNED')%}
                <li><a href="{{ path('my_posts') }}"class="text_white">Мой профиль</a></li>
                {%endif %}
            </ul>
        </nav>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_logout') }}" class="text"><button class="green">Выйти</button></a>
        {% else%}
            <a href="{{ path('app_login') }}" class="text"><button class="green">Войти</button></a>
        {%endif %}



    {% endblock %}
    </header>
    <div class="center_block_main">
        <aside>
            {% block side_bar %}
                <ul>
                    <li>
                        {%  if is_granted('IS_AUTHENTICATED_FULLY') and not is_granted('ROLE_BANNED') %}
                        <a href="{{ path('add_post')}}" class="text_black">Добавить пост</a>
                        {% endif %}
                    </li>

                </ul>
            {% endblock %}
        </aside>
        <div class="wrapper">
            <main>
                {% block body %}

                {% endblock %}
            </main>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </div>
        {% block javascripts %}{% endblock %}
    </body>
    <footer>Qqqqqqqqqqq zxc :)</footer>
</html>





